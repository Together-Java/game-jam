<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="700.0" minWidth="1000.0" prefHeight="900.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alathreon.guesstheduke.controller.GameController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Guess The Duke - Single Player" />
            <Label text="Pick your secret Duke, then ask about hats/arms/bottoms/colors. Primary color = main, Secondary color = accent." wrapText="true" />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label fx:id="statusLabel" style="-fx-font-size: 13;" text="Pick your secret Duke to start." />
                  <Button fx:id="toggleBoardButton" mnemonicParsing="false" onAction="#onToggleBoard" style="-fx-font-size: 12;" text="View AI Board" />
               </children>
            </HBox>
            <Label fx:id="remainingLabel" style="-fx-font-size: 13; -fx-font-weight: bold;" text="Remaining: 0" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <TilePane fx:id="grid" hgap="8.0" prefColumns="8" vgap="8.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </center>
   <right>
      <ScrollPane fitToHeight="true" minWidth="310.0" BorderPane.alignment="CENTER">
         <content>
            <VBox prefWidth="300.0" spacing="12.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Your Secret" />
                  <ImageView fx:id="playerSecretView" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="AI Secret (reveals at end)" />
                  <ImageView fx:id="aiSecretView" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Ask About Hat" />
                  <ComboBox fx:id="hatCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askHatButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onAskHat" text="Ask Hat" />
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Ask About Arms" />
                  <ComboBox fx:id="armsCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askArmsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onAskArms" text="Ask Arms" />
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Ask About Bottom" />
                  <ComboBox fx:id="bottomCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askBottomButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onAskBottom" text="Ask Bottom" />
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Ask About Bottom Pattern" />
                  <ComboBox fx:id="bottomPatternCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askBottomPatternButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onAskBottomPattern" text="Ask Bottom Pattern" />
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 13;" text="Ask About Colors" />
                  <Label text="Primary:" />
                  <ComboBox fx:id="primaryColorCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askPrimaryButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onPrimaryColor" text="Ask Primary Color" />
                  <Label style="-fx-padding: 8 0 0 0;" text="Secondary:" />
                  <ComboBox fx:id="secondaryColorCombo" maxWidth="Infinity" prefWidth="200.0" />
                  <Button fx:id="askSecondaryButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onSecondaryColor" text="Ask Secondary Color" />
                  <Separator prefWidth="200.0" />
                  <Button fx:id="guessButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onGuess" style="-fx-font-weight: bold; -fx-font-size: 13;" text="Guess Now!" />
                  <Separator prefWidth="200.0" />
                  <Button fx:id="setSecretButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onSetSecret" text="Set As My Secret" />
                  <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onNewGame" text="New Game" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </right>
   <bottom>
      <VBox minHeight="150.0" prefHeight="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Game Log" />
            <TextArea fx:id="log" editable="false" prefHeight="150.0" wrapText="true" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
